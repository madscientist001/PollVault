<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/opPic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/opUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/opPic"
            android:layout_alignTop="@+id/opPic"
            android:layout_marginStart="12dp"
            android:text="Username"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/opName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/opPic"
            android:layout_below="@+id/opUsername"
            android:layout_marginStart="12dp"
            android:text="Name"
            android:textColor="@color/iron"
            android:textSize="16sp"/>
    <!--
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@+id/opPic"
            android:src="@drawable/pen"
            android:id="@+id/contentPic"
            android:scaleType="centerCrop"/>


    -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#20ffffff"
            android:layout_below="@+id/opPic"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="@string/lorem_ipsum"
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/contentDesc"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>